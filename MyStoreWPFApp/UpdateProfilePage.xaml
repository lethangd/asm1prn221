<Window x:Class="MyStoreWPFApp.UpdateProfilePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Update Profile" Height="300" Width="400">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Profile" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Username:" Width="100" VerticalAlignment="Center"/>
                <TextBox x:Name="txtUsername" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Password:" Width="100" VerticalAlignment="Center"/>
                <PasswordBox x:Name="txtPassword" Width="200"/>
            </StackPanel>
            <Button Content="Save Changes" Click="SaveChanges_Click" Width="150" HorizontalAlignment="Center" Margin="20"/>
        </StackPanel>
    </Grid>
</Window>